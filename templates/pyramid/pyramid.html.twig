{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} Pyramide des renouvellements{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center my-4">
        Pyramide des renouvellements
    </h1>

    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button type="submit" class="btn btn-primary my-4">
        <svg xmlns="http://www.w3.org/2000/svg" width="19" height="19" fill="currentColor" class="bi bi-check2"
             viewBox="0 0 16 16">
            <path d="M13.854 3.646a.5.5 0 0 1 0 .708l-7 7a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L6.5
                10.293l6.646-6.647a.5.5 0 0 1 .708 0z"/>
        </svg>
        Appliquer
    </button>
    {{ form_end(form) }}


    <div class="row pt-4">
        <table class="table table-hover table-striped">
            <thead class="thead-dark">
                <tr>
                    {% for season in seasons %}
                        {% if loop.index == 1 %}
                            <th class="text-center align-middle category-td h5">Général</th>
                        {% endif %}
                        <th scope="col" class="text-center">{{ season.name }}</th>
                    {% endfor %}
                </tr>
            </thead>
            <tbody>
                {% for season, data in renewalPyramid %}
                    <tr>
                        <th scope="row" class="text-center">{{ season }}</th>
                        {% for total in data %}
                            <td class="text-center align-middle">{{ total }}</td>
                        {% endfor %}
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="row my-5">
        <table class="table table-hover table-striped">
            <thead class="thead-dark">
            <tr></tr>
            <tr>

                {% for season, data in renewalPyramidPercent %}
                    {% if loop.index == 1 %}
                        <th class="text-center"></th>
                        <th class="text-center">{{ loop.index }} an</th>
                    {% else %}
                        <th scope="col" class="text-center">{{ loop.index }} ans</th>
                    {% endif %}

                {% endfor %}
            </tr>
            </thead>
            <tbody>
            {% for season, duration in renewalPyramidPercent %}
                <tr>
                    <th scope="row" class="text-center">{{ season }}</th>
                    {% for percent in duration %}
                        <td class="text-center align-middle">{{ percent }} %</td>
                    {% endfor %}
                </tr>
            {% endfor %}
            <tr>
                <th scope="row" class="text-center">Moyenne</th>
                {% for percent in renewalPercentAverage %}
                    <td class="text-center align-middle font-weight-bold">{{ percent }} %</td>
                {% endfor %}
            </tr>
            </tbody>
        </table>
    </div>
</div>

{% endblock %}
