{% extends 'base.html.twig' %}
{% block body %}
<div class="container-fluid">
    <h1 class="text-center my-4">
        Récapitulatif des inscriptions
    </h1>
    <div class="row">
        <div class="col-12">
            <table class="table table-hover table-striped">
                <thead class="thead-dark">
                <tr>
                    <th scope="col" class="text-center" >Catégorie</th>
                    <th scope="col" class="text-center">Type de licence</th>
                    {% for season in seasons %}
                        <th scope="col" class="text-center">{{ season.name }}</th>
                    {% endfor %}
                </tr>
                </thead>
                <tbody>
                {% for categoryLabel, licences in statistics %}
                    {%  for licenceAcronym, licenceData in licences %}
                        <tr>
                            <td class="text-center">{{ categoryLabel }}</td>
                            <td class="text-center">{{ licenceAcronym}}</td>

                                {% for season in seasons %}
                                        {% for seasonData in licenceData|filter(seasonData => seasonData.name == season.name) %}
                                            <td class="text-center">
                                            {{ seasonData.total }}
                                            </td>
                                        {% else %}
                                            <td></td>
                                        {% endfor %}
                                {% endfor %}
                        </tr>
                    {% endfor %}
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
