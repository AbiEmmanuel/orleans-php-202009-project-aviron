{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} - Filtrer{% endblock %}
{% block stylesheets %}
    {{ encore_entry_link_tags('filter') }}
{% endblock %}
{% block body %}
    <div class="container-fluid">
        <h1 class="text-center my-4">Filtres de sélection</h1>
        {{ form_start(form) }}
        {{ form_errors(form) }}
        <h2 class="title-filter mb-3">Saison</h2>
        <div class="row">
            <div class="col-2 filter">
                {{ form_row(form.fromSeason) }}
            </div>
            <div class="col filter">
                {{ form_row(form.toSeason) }}
            </div>
        </div>
        <h2 class="title-filter my-3">Numéro adhérent</h2>
        <div class="row">
            <div class="col-2">
                {{ form_row(form.fromAdherent) }}
            </div>
        </div>
        <div class="row">
            <div class="col-2">
                {{ form_row(form.toAdherent) }}
            </div>
        </div>
        <h2 class="title-filter my-3">Sexe</h2>
        <div class="row">
            <div class="col-2">
                {{ form_row(form.gender) }}
            </div>
        </div>
        <h2 class="title-filter my-3">Statut</h2>
        <div class="row">
            <div class="col-5 d-flex align-items-center">
                {{ form_row(form.status) }}
            </div>
            <div class="col-2">
                {{ form_row(form.seasonStatus) }}
            </div>
        </div>
        <h2 class="title-filter my-3">Type de licence</h2>
        <div class="row">
            <div class="col-5 d-flex align-items-center">
                {{ form_row(form.licences) }}
            </div>
            <div class="col-2">
                {{ form_row(form.seasonLicence) }}
            </div>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Appliquer</button>
        {{ form_end(form) }}
    </div>
{% endblock %}