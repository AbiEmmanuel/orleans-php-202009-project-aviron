{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} - Import{% endblock %}
{% block stylesheets %}{% endblock %}
{% block body %}

    {% for category, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ category }} text-center">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <div class="container">
        <h1 class="text-center my-5">Importer une saison</h1>

        {{ form_start(form) }}
        {{ form_widget(form) }}
        <div class="text-center">
            <button class="btn btn-primary mt-5">Importer</button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}